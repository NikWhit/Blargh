<div class="header">
    <div class="logo">
        <h1>The Mast Dashboard</h1>
    </div>
</div>
<div class="card m-3">
    <div class="card-header">
        <h5>Update The Post</h5>
    </div>
    <div class="card-body">
        <form id="update-post">
            <div class="form-group">
                <input type="text" class="form-control" id="title" placeholder="Update Your Heading" value="{{postData.title}}">
            </div>
            <div class="form-group">
                <textarea class="form-control" id="post"></textarea>
            </div>
            <button type="submit" class="btn mt-2">Restate It</button>
            <button type="#delete-post" class="btn mt-3">SINK IT</button>
        </form>
    </div>

</div>